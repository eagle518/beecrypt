#define HAVE_DEV_DSP		0
#define HAVE_DEV_RANDOM		0
#define HAVE_DEV_URANDOM	0
#define HAVE_DEV_TTY		0

#define SIZEOF_CHAR					0
#define SIZEOF_UNSIGNED_CHAR		0
#define SIZEOF_SHORT				0
#define SIZEOF_UNSIGNED_SHORT		0
#define SIZEOF_INT					0
#define SIZEOF_UNSIGNED_INT			0
#define SIZEOF_LONG					0
#define SIZEOF_UNSIGNED_LONG		0
#define SIZEOF_LONG_LONG			0
#define SIZEOF_UNSIGNED_LONG_LONG	0

#define SIZEOF_FLOAT				0
#define SIZEOF_DOUBLE				0

#if (SIZEOF_CHAR == 1)
#define INT8_TYPE	char
#else
#error sizeof(char) not 1
#endif

#if (SIZEOF_SHORT == 2)
#define INT16_TYPE	short
#else
#error sizeof(short) not 2
#endif

#if (SIZEOF_INT == 4)
#define INT32_TYPE	int
#elif (SIZEOF_LONG == 4)
#define INT32_TYPE	long
#else
#error compiler has no 32 bit integer
#endif

#if (SIZEOF_LONG == 8)
#define INT64_TYPE	long
#define HAVE_LONG_LONG	0
#elif (SIZEOF_LONG_LONG == 8)
#define INT64_TYPE	long long
#define HAVE_LONG_LONG	1
#else
#error compiler has no 64 bit integer
#endif

#if (SIZEOF_UNSIGNED_CHAR == 1)
#define UINT8_TYPE	unsigned char
#else
#error sizeof(unsigned char) not 1
#endif

#if (SIZEOF_UNSIGNED_SHORT == 2)
#define UINT16_TYPE	unsigned short
#else
#error sizeof(unsigned short) not 2
#endif

#if (SIZEOF_UNSIGNED_INT == 4)
#define UINT32_TYPE	unsigned int
#elif (SIZEOF_UNSIGNED_LONG == 4)
#define UINT32_TYPE	unsigned long
#else
#error compiler has no 32 bit unsigned integer
#endif

#if (SIZEOF_UNSIGNED_LONG == 8)
#define UINT64_TYPE	unsigned long
#elif (SIZEOF_UNSIGNED_LONG_LONG == 8)
#define UINT64_TYPE	unsigned long long
#else
#error compiler has no 64 bit unsigned integer
#endif

#if (SIZEOF_FLOAT == 4)
#define FLOAT4_TYPE float
#else
#error compile has no 32 bit float
#endif

#if (SIZEOF_DOUBLE == 8)
#define DOUBLE8_TYPE double
#else
#error compile has no 64 bit double
#endif

#endif
